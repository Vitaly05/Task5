<div class="uk-background-secondary uk-border-rounded position-fixed m-0 m-sm-3 bottom-0 end-0 p-2 display-none" id="to-top-js">
    <a href="#" class="" uk-totop></a>
</div>

<div class="uk-background-muted uk-border-rounded mt-4 d-flex flex-column gap-4 align-items-center p-4" id="top-panel-js">
    <div class="d-flex flex-column align-items-center">
        <div class="mb-1">Region:</div>
        <div uk-form-custom="target: > * > span:first-child">
            <select aria-label="Custom controls" id="locale-js" class="generator-configuration-js">
                <option value="en_US" selected>United States</option>
                <option value="ru">Russian</option>
                <option value="pl">Polish</option>
            </select>
            <button class="uk-button uk-button-default" type="button" tabindex="-1">
                <span></span>
                <span uk-icon="icon: chevron-down"></span>
            </button>
        </div>
    </div>

    <div class="d-flex flex-column align-items-center uk-width-medium">
        <div class="mb-1">Amount of mistakes:</div>
        <input class="uk-input uk-width-small generator-configuration-js" id="mistakes-count-input-js" placeholder="Mistakes count" type="text" value="0" />
        <input class="uk-range generator-configuration-js" id="mistakes-count-range-js" type="range" value="0" min="0" max="10" step="0.25" aria-label="Range" />
    </div>

    <div class="d-flex flex-column align-items-center">
        <div class="mb-1">Seed:</div>
        <div class="uk-inline">
            <a href="" class="uk-form-icon uk-form-icon-flip" uk-tooltip="Random seed" id="random-seed-js"><i class="fa-solid fa-shuffle"></i></a>
            <input type="text" class="uk-input uk-width-small generator-configuration-js" placeholder="Seed" id="seed-js" value="0" aria-label="Clickable icon" />
        </div>
    </div>

    <div class="">
        <button class="uk-button" id="get-csv-js">Export to CSV</button>
    </div>
</div>

<div class="overflow-auto">
    <table class="uk-table uk-table-striped uk-table-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Random id</th>
                <th>Full name</th>
                <th>Address</th>
                <th>Phone number</th>
            </tr>
        </thead>
        <tbody id="users-table-body-js"></tbody>
    </table>
</div>

@section Scripts 
{
    <script src="~/js/site.js"></script>
}